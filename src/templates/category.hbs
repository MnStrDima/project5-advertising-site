<ul class="category-list">
    {{#each categorys}}
    <li class="category">
        <button class="previous-card"></button>
        <h2 class="category-discription">{{category}}</h2>
        <button class="look-all">Дивитися всі</button>
        <button class="next-card"></button>
        <ul class="card-list">
            {{#each cards}}
            <li class="card-item">
                {{> ./card}}
            </li>
            {{/each}}
        </ul>
    </li>
    {{/each}}
</ul>