<div class="row mx-auto my-auto">
    <div id="{{id}}" class="carousel slide w-100" data-ride="carousel">
        <ol class="carousel-indicators carousel-indicators-numbers">
            {{#each array}}
            {{#if @first}}
            <li data-target="#{{../id}}" data-slide-to="{{@index}}" class="active"></li>
            {{else}}
            <li data-target="#{{../id}}" data-slide-to="{{@index}}"></li>
            {{/if}}
            {{/each}}
        </ol>

        <div class="carousel-inner w-100" role="listbox">
            {{!-- Тут меняем разметку карточки, если нужно --}}
            {{#each array}}
            {{#if @first}}
            <div class="carousel-item carousel-item__pos active">
                <div class="col-md-3">
                    <article class="card" data-id={{_id}}>
                        <div class="card__img">
                            <button class="card__favorite-btn--orange">
                                <span class="material-icons icon-favorite-orange js-favorite-icon">
                                    favorite
                                </span>
                            </button>
                            <div class="card__overlay js-card-overlay">
                                <button class="card__favorite-btn js-favorite-card-btn">
                                    <span class="material-icons icon-favorite js-favorite-icon">
                                        favorite_border
                                    </span>
                                </button>
                                <button class="card__open-btn js-open-card-btn">
                                    <span class="material-icons js-modal-icon">
                                        crop_free
                                    </span>
                                </button>
                            </div>
                            <img class="card__img-preview" src={{imageUrls}} {{@index}}:{{@first}}
                                alt="{{description}}">
                        </div>
                        <div class=" card__description">
                            <h3 class="card__title">{{title}}</h3>
                            <div class="card__price js-card-price">
                                {{#if isOnSale}}
                                <span class="card__price--old">{{oldPrice}} грн</span>
                                <span class="card__price--sale">{{price}} грн</span>
                                {{/if}}
                                {{#unless isOnSale}}
                                <span>{{price}} грн</span>
                                {{/unless}}
                            </div>
                        </div>
                    </article>
                </div>
            </div>
            {{else}}
            <div class="carousel-item carousel-item__pos">
                <div class="col-md-3">
                    <article class="card" data-id={{_id}}>
                        <div class="card__img">
                            <button class="card__favorite-btn--orange">
                                <span class="material-icons icon-favorite-orange js-favorite-icon">
                                    favorite
                                </span>
                            </button>
                            <div class="card__overlay js-card-overlay">
                                <button class="card__favorite-btn js-favorite-card-btn">
                                    <span class="material-icons icon-favorite js-favorite-icon">
                                        favorite_border
                                    </span>
                                </button>
                                <button class="card__open-btn js-open-card-btn">
                                    <span class="material-icons js-modal-icon">
                                        crop_free
                                    </span>
                                </button>
                            </div>
                            <img class="card__img-preview" src={{imageUrls}} {{@index}}:{{@first}}
                                alt="{{description}}">
                        </div>
                        <div class="card__description">
                            <h3 class="card__title">{{title}}</h3>
                            <div class="card__price js-card-price">
                                {{#if isOnSale}}
                                <span class="card__price--old">{{oldPrice}} грн</span>
                                <span class="card__price--sale">{{price}} грн</span>
                                {{/if}}
                                {{#unless isOnSale}}
                                <span>{{price}} грн</span>
                                {{/unless}}
                            </div>
                        </div>
                    </article>
                </div>
            </div>
            {{/if}}
            {{/each}}
        </div>
        <a class="carousel-control-prev w-auto" href="#{{id}}" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon bg-dark border border-dark rounded-circle"
                aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next w-auto" href="#{{id}}" role="button" data-slide="next">
            <span class="carousel-control-next-icon bg-dark border border-dark rounded-circle"
                aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>